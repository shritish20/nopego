# ═══════════════════════════════════════════════════
#  NOPEGO — Environment Variables
#  Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════

# ── DATABASE (Supabase) ───────────────────────────────────────────────────────
# Use the "Transaction" pooler URL from Supabase (port 6543) for production
# Format: postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=""

# ── NEXTAUTH ──────────────────────────────────────────────────────────────────
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="https://yourdomain.com"

# ── RAZORPAY ──────────────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
NEXT_PUBLIC_RAZORPAY_KEY_ID=""

# ── CLOUDINARY ────────────────────────────────────────────────────────────────
# Get these from: https://cloudinary.com → Dashboard
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""

# ── EMAIL (Resend) ────────────────────────────────────────────────────────────
RESEND_API_KEY=""
EMAIL_FROM="Nopego <noreply@yourdomain.com>"

# ── WHATSAPP BUSINESS API ─────────────────────────────────────────────────────
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
ADMIN_WHATSAPP_PHONE=""

# ── SHIPROCKET ────────────────────────────────────────────────────────────────
SHIPROCKET_EMAIL=""
SHIPROCKET_PASSWORD=""

# ── AI CHATBOT (Anthropic) ────────────────────────────────────────────────────
ANTHROPIC_API_KEY=""

# ── CRON JOBS ─────────────────────────────────────────────────────────────────
CRON_SECRET=""

# ── APP ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXT_PUBLIC_APP_NAME="Nopego"
NODE_ENV="production"

# ── ADMIN SEED CREDENTIALS ────────────────────────────────────────────────────
# Used only during `npx prisma db seed`
ADMIN_EMAIL="admin@nopego.com"
ADMIN_PASSWORD="Nopego@2025!"

# ── WAREHOUSE (Shiprocket returns) ────────────────────────────────────────────
WAREHOUSE_NAME=""
WAREHOUSE_PHONE=""
WAREHOUSE_ADDRESS=""
WAREHOUSE_CITY=""
WAREHOUSE_STATE=""
WAREHOUSE_PINCODE=""

# ── SENTRY (optional) ─────────────────────────────────────────────────────────
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# ── LOGGING ───────────────────────────────────────────────────────────────────
LOG_LEVEL=info
